apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

namePrefix: {{ deployment_name }}-

resources:
  - ../../../../bases/grav

patches:
  - path: vault-patch.yaml
  - target:
      kind: Ingress
      name: grav-ingress
    patch: |-
      - op: replace
        path: /spec/rules/0/host
        value: {{ hostname }}
  - target:
      kind: RandomSecret
    patch: |-
      - op: replace
        path: /spec/path
        value: kv/{{ namespace }}/default/{{ deployment_name }}/grav-init-pwd